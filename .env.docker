# Docker Environment for Pokemon API
# Copy this to .env.docker and customize as needed

APP_NAME="Pokemon API"
APP_ENV=local
APP_KEY=base64:GENERATE_WITH_php_artisan_key_generate
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration (Docker)
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=pokemon_api
DB_USERNAME=pokemon_user
DB_PASSWORD=pokemon_password

# Cache Configuration (Database - No Redis)
CACHE_STORE=database
SESSION_DRIVER=database
QUEUE_CONNECTION=database

# Redis Configuration (Not used, but needed for config)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (for password reset)
MAIL_MAILER=log
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@pokemon-api.local"
MAIL_FROM_NAME="${APP_NAME}"

# JWT Configuration
JWT_SECRET=GENERATE_WITH_php_artisan_jwt_secret
JWT_ALGO=HS256

# PokeAPI Configuration
POKEAPI_BASE_URL=https://pokeapi.co/api/v2
POKEAPI_CACHE_LIST_TTL=60
POKEAPI_CACHE_DETAIL_TTL=120
POKEAPI_CACHE_TYPE_TTL=240
POKEAPI_CACHE_EVOLUTION_TTL=240
POKEAPI_TIMEOUT=10
POKEAPI_MAX_LIMIT=100
POKEAPI_DEFAULT_LIMIT=20
POKEAPI_USER_AGENT="Laravel-PokeAPI-Client/1.0"
POKEAPI_SEARCH_MAX_RESULTS=1000